                    </agr:group>
                </agr:agrspace>
                <env:envspace name="2dspace" type="2dspace" width="30" height="30">
                    <env:processes>
                        <env:process type="build_map"/>
                    </env:processes>
                    <env:objects>
                        <env:object type="homebase">
                            <env:property name="position">new Vector2Double(1, 1)</env:property>
